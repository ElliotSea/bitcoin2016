   <section id="Start_campaign">
    <form id="movieForm" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-xs-6">
                <label class="control-label">Company Name</label>
                <input type="text" class="form-control" name="title" value="<%= $User_Info['CompanyName'] %>" onChange="myFunction()"/>
            </div>

            <div class="col-xs-2 selectContainer" onChange="recalculatePrice()">
                <label class="control-label">Campaign length</label>
                <select class="form-control" name="length">
                    <option value=1>One Month</option>
                    <option value=3>Three Monthes</option>
                    <option value=6>Six Monthes</option>
                    <option value=12>One Year</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-2">
                <label class="control-label">@Twitter</label>
                <input type="text" class="form-control" name="twitter" value="<%= $User_Info['TwitterName'] %>" />
            </div>

            <div class="col-xs-2">
                <label class="control-label">Description</label>
                <input type="text" class="form-control" name="Description" value="<%= $User_Info['Description'] %>" />
            </div>

            <div class="col-xs-2">
                <label class="control-label">Company Landing Page</label>
                <input type="text" class="form-control" name="Landing_Page" value="" />
            </div>
            <div class="col-xs-2">
            <div class="checkbox" onClick="recalculatePrice()">
              <label>
                <input type="checkbox" name="check1" value="">
                Quickest
              </label>
            </div>
            <div class="checkbox" onClick="recalculatePrice()">
              <label>
                <input type="checkbox" name="check2" value="">
                Most Active
              </label>
            </div>
            <div class="checkbox" onClick="recalculatePrice()">
              <label>
                <input type="checkbox" name="check3" value="">
                Random Retweet
              </label>
            </div>
            </div>

        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-4">
                <label class="control-label">Campaign Page</label>
                <input type="text" class="form-control" name="website" value="" />
            </div>

            <div class="col-xs-4">
                <label class="control-label">#Hashtag</label>
                <input type="text" class="form-control" name="hashtag" value="#" maxlength="15" onChange="myFunction()"/>
            </div>
        </div>
    </div>
<div class="row">
    <div class="col-xs-8">
      <label class="control-label">Message</label>
   
        <textarea class="form-control" name="review" rows="8" value="" maxlength="110"></textarea>
    </div>
  </div>
</div>
