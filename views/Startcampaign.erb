   <section id="Start_campaign">
    <form id="movieForm" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-xs-6">
                <label class="control-label">Company Name</label>
                <input type="text" class="form-control" name="title" value="<%= tweet["tweet.media_url"] %>"/>
            </div>

            <div class="col-xs-2 selectContainer">
                <label class="control-label">Campaign length</label>
                <select class="form-control" name="length">
                    
                    <option value=1>One Month</option>
                    <option value=3>Three Monthes</option>
                    <option value=6>Six Monthes</option>
                    <option value=12>One Year</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-2">
                <label class="control-label">@Twitter</label>
                <input type="text" class="form-control" name="twitter" value="<%= tweet["tweet.media_url"] %>" />
            </div>

            <div class="col-xs-2">
                <label class="control-label">Description</label>
                <input type="text" class="form-control" name="Description" value="<%= tweet["tweet.media_url"] %>" />
            </div>

            <div class="col-xs-2">
                <label class="control-label">Company Landing Page</label>
                <input type="text" class="form-control" name="Landing_Page" value="" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-4">
                <label class="control-label">Campaign Page</label>
                <input type="text" class="form-control" name="website" value="" />
            </div>

            <div class="col-xs-4">
                <label class="control-label">Youtube link</label>
                <input type="text" class="form-control" name="trailer" value="" />
            </div>
        </div>
    </div>

    <div class="col-xs-8">
      <label class="control-label">Message</label>
   
        <textarea class="form-control" name="review" rows="8" value=""></textarea>
    </div>
  </div>
<div class="col-xs-12">
    <button type="submit" class="btn btn-primary btn-right">Publish</button>
</div>

