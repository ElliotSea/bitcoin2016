<script language= "JavaScript" type="text/JavaScript">
function myFunction(){ 
  var hashtagg = document.getElementsByName("hashtag")[0].value;
  var CompanyName = document.getElementsByName("title")[0].value;
  var CompanyLink = document.getElementsByName("website")[0].value;
  document.getElementsByName("review")[0].value = "This is the great new project from " + CompanyName + ". Read more at " + CompanyLink + " #Tweetybitcoin " + hashtagg;
}

function enablePublish(){
  alert("1");
  document.getElementsByName("publish")[0].disabled=false;
}
function recalculatePrice(){
  var amount = 200
  if (document.getElementsByName("check1")[0].checked)
    amount = amount +50
  if (document.getElementsByName("check2")[0].checked)
    amount = amount +50
  if (document.getElementsByName("check3")[0].checked)
    amount = amount +50
  amount = amount + (document.getElementsByName("length")[0].value)*5
  document.getElementsByName("price")[0].innerHTML = "$"+amount; 
}
</script>


