   <section id="campaigns">
    <div class="container">
      <div class="row">
      <h1>Recent Campaigns</h1>

<% $Unique_Earliest_Campaigns.each do |id, tweet| %>
  <div class="row">
     <div class="media">
        <div class="media-left">
          <a href="#">
            <div class="col-md-3"> <img class="media-object" src="<%= tweet["tweet.media_url"] %>" alt="..."></div>
         </a>   
        
      <div class="media-body">
        <h4 class="media-heading"><%= tweet["capmaign_name"] %></h4>
         <p><%= tweet["tweet.text"] %></p>

          <div class="col-md-2"> <a class="btn btn-primary pull-right" href="https://twitter.com/intent/tweet?text=Miami+Bitcoin+Hackathon+%7C+Jan+22-24%2C+2016+%7C+Miami%2C+USA+https%3A%2F%2Ft.co%2Fwr0Qd0dFMY+%23MiaBitcoinHack+%23tweetybitcoin+https%3A%2F%2Ft.co%2FRhaJIqiepf"><i class="fa fa-twitter fa-fw"></i> Share Campaign </a></div>

          <div class="col-md-1"><button class="btn btn-sm btn-default like-btn active" type="button" id="10"> <span class="i class="fa fa-eye fa-fw""></span><span class="text">Likes</span> <span class="badge like-badge"><%= tweet["tweet.favorite_count"] %></span></button></div>       

          <div class="col-md-1"><button class="btn btn-sm btn-default like-btn active" type="button" id="10"> <span class="i class="fa fa-share fa-fw""></span><span class="text">Shares</span> <span class="badge like-badge"><%= tweet["tweet.retweet_count"] %></span></button></div>

        </div>
      </div>
  </div>
<% end %>

      </div>
    </div>
   </section>

